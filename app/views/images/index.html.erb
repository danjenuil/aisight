<h1>Images</h1>

<table>
  <thead>
        <tr>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.title %></td>
          <td>
            <%= link_to 'View', image_path(image) %>
            <%= link_to 'Delete', image_path(image), data: { turbo_method: :delete }%>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>