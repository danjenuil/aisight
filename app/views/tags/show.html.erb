<h1>Tags / <%= @tag.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tags</th>
      <th>Total Tags</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.title %></td>
        <td>
          <% image.tags.each do |tag| %>
            <%= link_to tag.name, tag %>
          <% end %>
        </td>
        <td><%= image.tags.count %></td>
        <td>
          <%= link_to 'View', image %>
          <%= link_to 'Delete', image, data: { turbo_method: :delete }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
